    <script>
      // เพิ่มคลาส "active" ให้กับเมนูที่ตรงกับ URL ปัจจุบัน
      function setActiveMenu() {
        const currentUrl = window.location.href;
    
        // เลือกเมนูทั้งหมด
        const menuItems = document.querySelectorAll('.menu-item');
    
        // ตรวจสอบ URL และเพิ่มคลาส "active" ให้กับเมนูที่ตรงกับ URL ปัจจุบัน
        menuItems.forEach(item => {
          const menuLink = item.querySelector('.menu-link');
          if (menuLink && menuLink.href === currentUrl) {
            item.classList.add('active');
          }
        });
      }
    
      // เรียกใช้ setActiveMenu เมื่อหน้าโหลดเสร็จ
      window.addEventListener('DOMContentLoaded', setActiveMenu);
    </script>
    

    
